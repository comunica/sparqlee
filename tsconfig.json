{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "CommonJS",
    "lib": [
      "es6",
      "es2019",
    ],
    "target": "es2017",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "importHelpers": false,
    "outDir": "./dist",
    "noImplicitThis": true,

    "strict": true,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false
  },
  "include": [
    "index.ts",
    "lib/**/*.ts",
    "bin/**/*.ts",
    "util/**/*.ts",
    "typings/**/*.d.ts",
    "benchmarks/**/*.ts"
  ],
  "exclude": [
    "**/dist",
    "**/node_modules",
    "**/test",
  ]
}
